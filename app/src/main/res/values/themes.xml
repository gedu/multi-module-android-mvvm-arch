<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Brunch" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/black20</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black20</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CurvyHeading45">
        <item name="fontFamily">@font/dancing_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h1_45</item>
        <item name="lineHeight">43dp</item>
    </style>

    <style name="BaseHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading24" parent="BaseHeading">
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <style name="Heading20" parent="BaseHeading">
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="Heading18" parent="BaseHeading">
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="Heading16" parent="BaseHeading">
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="BaseBody">
        <item name="android:textColor">@color/dark200</item>
    </style>

    <style name="BodyMedium" parent="BaseBody">
        <item name="android:textSize">@dimen/body_m</item>
    </style>

    <style name="BodySmall" parent="BaseBody">
        <item name="android:textSize">@dimen/body_s</item>
    </style>

    <style name="CurvyBodyLarge" parent="BaseBody">
        <item name="fontFamily">@font/dancing_semibold</item>
        <item name="android:textSize">@dimen/body_l</item>
    </style>

    <style name="BodyXSmall" parent="BaseBody">
        <item name="android:textSize">@dimen/body_xs</item>
    </style>

</resources>